@import 'tailwindcss/base';
@import 'tailwindcss/components';
@import 'tailwindcss/utilities';

@layer base {
  :root {
    --background: 0 0% 100%;
    --foreground: 222.2 84% 4.9%;
    --card: 0 0% 100%;
    --card-foreground: 222.2 84% 4.9%;
    --popover: 0 0% 100%;
    --popover-foreground: 222.2 84% 4.9%;
    --primary: 221.2 83.2% 53.3%;
    --primary-foreground: 210 40% 98%;
    --secondary: 210 40% 96%;
    --secondary-foreground: 222.2 84% 4.9%;
    --muted: 210 40% 96%;
    --muted-foreground: 215.4 16.3% 46.9%;
    --accent: 210 40% 96%;
    --accent-foreground: 222.2 84% 4.9%;
    --destructive: 0 84.2% 60.2%;
    --destructive-foreground: 210 40% 98%;
    --border: 214.3 31.8% 91.4%;
    --input: 214.3 31.8% 91.4%;
    --ring: 221.2 83.2% 53.3%;
    --radius: 0.75rem;
    --font-sans: 'Inter', system-ui, -apple-system, sans-serif;
    --font-mono: 'JetBrains Mono', 'Fira Code', monospace;

    /* ðŸŒŸ TECH HY ECOSYSTEM GLASSMORPHISM 2025 ðŸŒŸ */
    /* ðŸš€ Inspired by TECH HY Brand + Ultra Modern Design */
    
    /* ===== TECH HY Ð‘Ð Ð•ÐÐ”ÐžÐ’Ð«Ð• Ð¦Ð’Ð•Ð¢Ð ===== */
    --techhy-primary: #1E3A8A;     /* Deep Tech Blue */
    --techhy-secondary: #3B82F6;   /* Bright Blue */
    --techhy-accent: #8B5CF6;      /* Purple Accent */
    --techhy-success: #10B981;     /* Green Success */
    --techhy-warning: #F59E0B;     /* Amber Warning */
    --techhy-danger: #EF4444;      /* Red Danger */
    --techhy-dark: #0F172A;        /* Deep Dark */
    --techhy-light: #F8FAFC;       /* Light */
    
    /* ===== ÐŸÐ Ð•ÐœÐ˜ÐÐ›Ð¬ÐÐ«Ð• CUBIC-BEZIER ÐŸÐ•Ð Ð•ÐœÐ•ÐÐÐ«Ð• ===== */
    --ease-out-expo: cubic-bezier(0.23, 1, 0.320, 1);
    --ease-out-back: cubic-bezier(0.175, 0.885, 0.32, 1.275);
    --ease-in-out-back: cubic-bezier(0.68, -0.55, 0.265, 1.55);
    --ease-out-quad: cubic-bezier(0.25, 0.46, 0.45, 0.94);
    --ease-in-out-quart: cubic-bezier(0.77, 0, 0.175, 1);
    --ease-in-out-sine: cubic-bezier(0.42, 0, 0.58, 1);
    
    /* ===== Ð”Ð›Ð˜Ð¢Ð•Ð›Ð¬ÐÐžÐ¡Ð¢Ð¬ ÐÐÐ˜ÐœÐÐ¦Ð˜Ð™ ===== */
    --duration-fast: 0.15s;
    --duration-normal: 0.3s;
    --duration-medium: 0.4s;
    --duration-slow: 0.6s;
    --duration-slower: 0.8s;
    
    /* TECH HY Glass Properties - Enhanced */
    --glass-blur-radius: 28px;
    --glass-blur-intensity: 1.8;
    --glass-brightness: 125%;
    --glass-saturation: 150%;
    --glass-contrast: 115%;
    --glass-opacity: 0.18;
    --glass-edge-opacity: 0.28;
    --glass-thickness: 8px;
    
    /* Depth & Layering - TECH HY Style */
    --glass-depth-near: 220%;
    --glass-depth-far: 160%;
    --glass-mask-fade: 45%;
    
    /* TECH HY Color Themes - Based on Brand */
    --glass-techhy-primary: rgba(30, 58, 138, var(--glass-opacity));
    --glass-techhy-secondary: rgba(59, 130, 246, var(--glass-opacity));
    --glass-techhy-accent: rgba(139, 92, 246, var(--glass-opacity));
    --glass-techhy-success: rgba(16, 185, 129, var(--glass-opacity));
    --glass-neutral: rgba(255, 255, 255, var(--glass-opacity));
    --glass-dark: rgba(15, 23, 42, var(--glass-opacity));
    
    /* TECH HY Premium Button Colors */
    --glass-techhy-blue: rgba(30, 58, 138, 0.25);
    --glass-techhy-blue-border: rgba(59, 130, 246, 0.4);
    --glass-techhy-purple: rgba(139, 92, 246, 0.22);
    --glass-techhy-purple-border: rgba(139, 92, 246, 0.35);
    --glass-techhy-green: rgba(16, 185, 129, 0.2);
    --glass-techhy-green-border: rgba(16, 185, 129, 0.35);
    --glass-techhy-orange: rgba(245, 158, 11, 0.2);
    --glass-techhy-orange-border: rgba(245, 158, 11, 0.35);
    --glass-techhy-red: rgba(239, 68, 68, 0.2);
    --glass-techhy-red-border: rgba(239, 68, 68, 0.35);
    
    /* Legacy colors maintained for compatibility */
    --glass-orange: var(--glass-techhy-orange);
    --glass-orange-border: var(--glass-techhy-orange-border);
    --glass-blue: var(--glass-techhy-blue);
    --glass-blue-border: var(--glass-techhy-blue-border);
    --glass-fire: var(--glass-techhy-red);
    --glass-fire-border: var(--glass-techhy-red-border);
    --glass-green: var(--glass-techhy-green);
    --glass-green-border: var(--glass-techhy-green-border);
    
    /* TECH HY Border & Highlights */
    --glass-border: rgba(59, 130, 246, 0.25);
    --glass-border-dark: rgba(30, 58, 138, 0.15);
    --glass-highlight: rgba(139, 92, 246, 0.4);
    --glass-shadow: rgba(15, 23, 42, 0.3);
    
    /* TECH HY Animation Properties */
    --glass-transition: all var(--duration-medium) var(--ease-out-expo);
    --glass-transition-fast: all var(--duration-fast) var(--ease-in-out-back);
    --glass-hover-scale: 1.03;
    --glass-hover-blur: 36px;
    --glass-hover-brightness: 135%;
    
    /* TECH HY Gradient Backgrounds */
    --techhy-gradient-primary: linear-gradient(135deg, var(--techhy-primary) 0%, var(--techhy-secondary) 50%, var(--techhy-accent) 100%);
    --techhy-gradient-glass: linear-gradient(135deg, var(--glass-techhy-primary) 0%, var(--glass-techhy-secondary) 50%, var(--glass-techhy-accent) 100%);
  }

  .dark {
    --background: 222.2 84% 4.9%;
    --foreground: 210 40% 98%;
    --card: 222.2 84% 4.9%;
    --card-foreground: 210 40% 98%;
    --popover: 222.2 84% 4.9%;
    --popover-foreground: 210 40% 98%;
    --primary: 217.2 91.2% 59.8%;
    --primary-foreground: 222.2 84% 4.9%;
    --secondary: 217.2 32.6% 17.5%;
    --secondary-foreground: 210 40% 98%;
    --muted: 217.2 32.6% 17.5%;
    --muted-foreground: 215 20.2% 65.1%;
    --accent: 217.2 32.6% 17.5%;
    --accent-foreground: 210 40% 98%;
    --destructive: 0 62.8% 30.6%;
    --destructive-foreground: 210 40% 98%;
    --border: 217.2 32.6% 17.5%;
    --input: 217.2 32.6% 17.5%;
    --ring: 224.3 76.3% 94.1%;

    /* Dark Mode Glass Adjustments */
    --glass-opacity: 0.12;
    --glass-brightness: 110%;
    --glass-saturation: 120%;
    --glass-border: rgba(255, 255, 255, 0.15);
    --glass-highlight: rgba(255, 255, 255, 0.3);
  }

  /* ===== Ð“Ð›ÐžÐ‘ÐÐ›Ð¬ÐÐÐ¯ ÐŸÐ›ÐÐ’ÐÐžÐ¡Ð¢Ð¬ Ð”Ð›Ð¯ Ð’Ð¡Ð•Ð¥ Ð­Ð›Ð•ÐœÐ•ÐÐ¢ÐžÐ’ ===== */
  *, *::before, *::after {
    /* Ð‘Ð°Ð·Ð¾Ð²Ð°Ñ Ð°Ð½Ð¸Ð¼Ð°Ñ†Ð¸Ñ Ð´Ð»Ñ Ð²ÑÐµÑ… ÑÐ»ÐµÐ¼ÐµÐ½Ñ‚Ð¾Ð² */
    transition: transform var(--duration-normal) var(--ease-out-expo),
                opacity var(--duration-normal) var(--ease-out-expo),
                box-shadow var(--duration-normal) var(--ease-out-expo);
  }

  * {
    @apply border-border;
  }
  
  body {
    @apply bg-background text-foreground font-sans;
    font-feature-settings: "rlig" 1, "calt" 1;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    -webkit-text-size-adjust: 100%;
    
    /* Enhanced scrollbar styling */
    &::-webkit-scrollbar {
        width: 4px;
        background: #072b40;
        transition: all var(--duration-medium) var(--ease-out-expo);
    }

    &::-webkit-scrollbar-thumb {
        background-color: #a46b17;
        -webkit-border-radius: 2ex;
        transition: all var(--duration-medium) var(--ease-out-expo);
        
        &:hover {
            background-color: #d49d32;
        }
    }
  }

  /* ===== Ð£Ð›Ð£Ð§Ð¨Ð•ÐÐÐ«Ð• HOVER Ð­Ð¤Ð¤Ð•ÐšÐ¢Ð« Ð”Ð›Ð¯ Ð˜ÐÐ¢Ð•Ð ÐÐšÐ¢Ð˜Ð’ÐÐ«Ð¥ Ð­Ð›Ð•ÐœÐ•ÐÐ¢ÐžÐ’ ===== */
  a, button, [role="button"], input, textarea, select {
    transition: var(--glass-transition) !important;
    
    &:hover {
        transform: translateY(-1px);
    }
    
    &:active {
        transform: translateY(0);
        transition: var(--glass-transition-fast) !important;
    }
  }

  /* ===== ÐÐÐ˜ÐœÐÐ¦Ð˜Ð˜ ÐŸÐžÐ¯Ð’Ð›Ð•ÐÐ˜Ð¯ Ð”Ð›Ð¯ Ð¡Ð•ÐšÐ¦Ð˜Ð™ ===== */
  section, article, .fade-in {
    animation: fadeInUp 0.8s var(--ease-out-expo) forwards;
  }

  @keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
  }

  /* ===== ÐŸÐ›ÐÐ’ÐÐ«Ð• Ð¤ÐžÐšÐ£Ð¡Ð« Ð”Ð›Ð¯ Ð”ÐžÐ¡Ð¢Ð£ÐŸÐÐžÐ¡Ð¢Ð˜ ===== */
  :focus-visible {
    outline: 2px solid #d49d32;
    outline-offset: 2px;
    border-radius: 4px;
    transition: outline var(--duration-fast) var(--ease-out-expo);
  }

  /* ðŸŽ¨ ENHANCED TYPOGRAPHY FOR GLASSMORPHISM */
  h1, h2, h3, h4, h5, h6 {
    color: white !important;
    text-shadow: 0 2px 12px rgba(0, 0, 0, 0.8), 0 4px 24px rgba(0, 0, 0, 0.4);
    font-weight: 600;
    letter-spacing: -0.025em;
  }

  h1 {
    color: white !important;
    text-shadow: 0 4px 16px rgba(0, 0, 0, 0.9), 0 8px 32px rgba(0, 0, 0, 0.5);
    font-weight: 700;
    letter-spacing: -0.04em;
  }

  h2 {
    color: white !important;
    text-shadow: 0 3px 12px rgba(0, 0, 0, 0.8), 0 6px 24px rgba(0, 0, 0, 0.4);
    font-weight: 600;
    letter-spacing: -0.03em;
  }

  h3 {
    color: white !important;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.7), 0 4px 16px rgba(0, 0, 0, 0.3);
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  /* Enhanced Gradient Text */
  .bg-gradient-to-r.bg-clip-text.text-transparent {
    background: linear-gradient(135deg, #60A5FA 0%, #A78BFA 50%, #F472B6 100%) !important;
    -webkit-background-clip: text !important;
    background-clip: text !important;
    -webkit-text-fill-color: transparent !important;
    text-shadow: none !important;
    background-size: 200% 200%;
    animation: gradient-shift 4s ease-in-out infinite;
  }

  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  /* Enhanced Scrollbar with Glass Effect */
  ::-webkit-scrollbar {
    width: 12px;
    height: 12px;
  }

  ::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(8px);
    border-radius: 6px;
  }

  ::-webkit-scrollbar-thumb {
    background: linear-gradient(135deg, 
      rgba(99, 102, 241, 0.3) 0%, 
      rgba(168, 85, 247, 0.3) 100%);
    backdrop-filter: blur(12px);
    border-radius: 6px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: var(--glass-transition);
  }

  ::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(135deg, 
      rgba(99, 102, 241, 0.5) 0%, 
      rgba(168, 85, 247, 0.5) 100%);
    backdrop-filter: blur(16px);
    transform: scale(1.1);
  }

  /* Enhanced Focus & Selection */
  :focus {
    outline: 2px solid rgba(99, 102, 241, 0.6);
    outline-offset: 2px;
    box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.2);
  }

  ::selection {
    background: rgba(99, 102, 241, 0.3);
    color: white;
    backdrop-filter: blur(8px);
  }
}

@layer components {
  /* ðŸš€ ULTRA MODERN GLASSMORPHISM COMPONENTS 2025 ðŸš€ */

  /* âœ¨ Base Glass System */
  .glass-ultra {
    position: relative;
    background: var(--glass-neutral);
    backdrop-filter: blur(var(--glass-blur-radius)) 
                     brightness(var(--glass-brightness)) 
                     saturate(var(--glass-saturation)) 
                     contrast(var(--glass-contrast));
    -webkit-backdrop-filter: blur(var(--glass-blur-radius)) 
                             brightness(var(--glass-brightness)) 
                             saturate(var(--glass-saturation)) 
                             contrast(var(--glass-contrast));
    border: 1px solid var(--glass-border);
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.3),
      0 4px 16px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 var(--glass-highlight),
      inset 0 -1px 0 rgba(255, 255, 255, 0.05);
    transition: var(--glass-transition);
    pointer-events: auto;
  }

  /* ðŸŒŸ Advanced Glass Backdrop with Extended Coverage */
  .glass-backdrop {
    position: absolute;
    inset: 0;
    height: var(--glass-depth-near);
    backdrop-filter: blur(var(--glass-blur-radius)) 
                     brightness(var(--glass-brightness)) 
                     saturate(var(--glass-saturation));
    -webkit-backdrop-filter: blur(var(--glass-blur-radius)) 
                             brightness(var(--glass-brightness)) 
                             saturate(var(--glass-saturation));
    background: linear-gradient(
      to bottom,
      var(--glass-neutral) 0%,
      transparent var(--glass-mask-fade)%
    );
    mask-image: linear-gradient(
      to bottom,
      black 0% var(--glass-mask-fade)%,
      transparent var(--glass-mask-fade)% 100%
    );
    -webkit-mask-image: linear-gradient(
      to bottom,
      black 0% var(--glass-mask-fade)%,
      transparent var(--glass-mask-fade)% 100%
    );
    pointer-events: none;
    z-index: -1;
  }

  /* ðŸ’Ž 3D Glass Edge Effect */
  .glass-edge {
    position: absolute;
    inset: 0;
    height: 100%;
    transform: translateY(100%);
    background: var(--glass-neutral);
    backdrop-filter: blur(calc(var(--glass-blur-radius) * 0.75)) 
                     brightness(calc(var(--glass-brightness) * 1.1));
    -webkit-backdrop-filter: blur(calc(var(--glass-blur-radius) * 0.75)) 
                             brightness(calc(var(--glass-brightness) * 1.1));
    mask-image: linear-gradient(
      to bottom,
      black 0,
      black var(--glass-thickness),
      transparent var(--glass-thickness)
    );
    -webkit-mask-image: linear-gradient(
      to bottom,
      black 0,
      black var(--glass-thickness),
      transparent var(--glass-thickness)
    );
    pointer-events: none;
    z-index: -2;
  }

  /* ðŸŽ­ Glass Panel Variants */
  .glass-panel-ultra {
    position: relative;
    background: var(--glass-neutral);
    backdrop-filter: blur(var(--glass-blur-radius)) 
                     brightness(var(--glass-brightness)) 
                     saturate(var(--glass-saturation)) 
                     contrast(var(--glass-contrast));
    -webkit-backdrop-filter: blur(var(--glass-blur-radius)) 
                             brightness(var(--glass-brightness)) 
                             saturate(var(--glass-saturation)) 
                             contrast(var(--glass-contrast));
    border: 1px solid var(--glass-border);
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.3),
      0 4px 16px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 var(--glass-highlight),
      inset 0 -1px 0 rgba(255, 255, 255, 0.05);
    transition: var(--glass-transition);
    pointer-events: auto;
    border-radius: 1rem;
    padding: 1.5rem;
    border: none !important;
  }

  .glass-panel-ultra::before {
    content: '';
    position: absolute;
    inset: 0;
    height: var(--glass-depth-near);
    backdrop-filter: blur(var(--glass-blur-radius)) 
                     brightness(var(--glass-brightness)) 
                     saturate(var(--glass-saturation));
    -webkit-backdrop-filter: blur(var(--glass-blur-radius)) 
                             brightness(var(--glass-brightness)) 
                             saturate(var(--glass-saturation));
    background: linear-gradient(
      to bottom,
      var(--glass-neutral) 0%,
      transparent var(--glass-mask-fade)%
    );
    mask-image: linear-gradient(
      to bottom,
      black 0% var(--glass-mask-fade)%,
      transparent var(--glass-mask-fade)% 100%
    );
    -webkit-mask-image: linear-gradient(
      to bottom,
      black 0% var(--glass-mask-fade)%,
      transparent var(--glass-mask-fade)% 100%
    );
    pointer-events: none;
    z-index: -1;
  }

  .glass-panel-ultra::after {
    content: '';
    position: absolute;
    inset: 0;
    height: 100%;
    transform: translateY(100%);
    background: var(--glass-neutral);
    backdrop-filter: blur(calc(var(--glass-blur-radius) * 0.75)) 
                     brightness(calc(var(--glass-brightness) * 1.1));
    -webkit-backdrop-filter: blur(calc(var(--glass-blur-radius) * 0.75)) 
                             brightness(calc(var(--glass-brightness) * 1.1));
    mask-image: linear-gradient(
      to bottom,
      black 0,
      black var(--glass-thickness),
      transparent var(--glass-thickness)
    );
    -webkit-mask-image: linear-gradient(
      to bottom,
      black 0,
      black var(--glass-thickness),
      transparent var(--glass-thickness)
    );
    pointer-events: none;
    z-index: -2;
  }

  /* Primary Glass Theme */
  .glass-primary {
    background: var(--glass-primary);
    border-color: rgba(99, 102, 241, 0.4);
    box-shadow: 
      0 8px 32px rgba(99, 102, 241, 0.3),
      0 4px 16px rgba(99, 102, 241, 0.2),
      inset 0 1px 0 rgba(99, 102, 241, 0.5);
  }

  /* Secondary Glass Theme */
  .glass-secondary {
    background: var(--glass-secondary);
    border-color: rgba(168, 85, 247, 0.4);
    box-shadow: 
      0 8px 32px rgba(168, 85, 247, 0.3),
      0 4px 16px rgba(168, 85, 247, 0.2),
      inset 0 1px 0 rgba(168, 85, 247, 0.5);
  }

  /* Accent Glass Theme */
  .glass-accent {
    background: var(--glass-accent);
    border-color: rgba(59, 130, 246, 0.4);
    box-shadow: 
      0 8px 32px rgba(59, 130, 246, 0.3),
      0 4px 16px rgba(59, 130, 246, 0.2),
      inset 0 1px 0 rgba(59, 130, 246, 0.5);
  }

  /* ðŸŒˆ Interactive Glass States */
  .glass-ultra:hover {
    transform: scale(var(--glass-hover-scale));
    backdrop-filter: blur(var(--glass-hover-blur)) 
                     brightness(var(--glass-hover-brightness)) 
                     saturate(calc(var(--glass-saturation) * 1.1));
    -webkit-backdrop-filter: blur(var(--glass-hover-blur)) 
                             brightness(var(--glass-hover-brightness)) 
                             saturate(calc(var(--glass-saturation) * 1.1));
    box-shadow: 
      0 16px 64px rgba(0, 0, 0, 0.4),
      0 8px 32px rgba(0, 0, 0, 0.3),
      inset 0 2px 0 var(--glass-highlight),
      inset 0 -2px 0 rgba(255, 255, 255, 0.1);
  }

  /* ðŸŽ¯ Modern Card System */
  .card-ultra {
    position: relative;
    background: var(--glass-neutral);
    backdrop-filter: blur(var(--glass-blur-radius)) 
                     brightness(var(--glass-brightness)) 
                     saturate(var(--glass-saturation)) 
                     contrast(var(--glass-contrast));
    -webkit-backdrop-filter: blur(var(--glass-blur-radius)) 
                             brightness(var(--glass-brightness)) 
                             saturate(var(--glass-saturation)) 
                             contrast(var(--glass-contrast));
    border: 1px solid var(--glass-border);
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.3),
      0 4px 16px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 var(--glass-highlight),
      inset 0 -1px 0 rgba(255, 255, 255, 0.05);
    transition: var(--glass-transition);
    pointer-events: auto;
    border-radius: 1rem;
    padding: 1.5rem;
    border: none !important;
    overflow: hidden;
  }

  .card-ultra:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow: 
      0 24px 64px rgba(0, 0, 0, 0.4),
      0 12px 32px rgba(0, 0, 0, 0.3);
  }

  /* Legacy card compatibility */
  .card {
    position: relative;
    background: var(--glass-neutral);
    backdrop-filter: blur(var(--glass-blur-radius)) 
                     brightness(var(--glass-brightness)) 
                     saturate(var(--glass-saturation)) 
                     contrast(var(--glass-contrast));
    -webkit-backdrop-filter: blur(var(--glass-blur-radius)) 
                             brightness(var(--glass-brightness)) 
                             saturate(var(--glass-saturation)) 
                             contrast(var(--glass-contrast));
    border: 1px solid var(--glass-border);
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.3),
      0 4px 16px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 var(--glass-highlight),
      inset 0 -1px 0 rgba(255, 255, 255, 0.05);
    transition: var(--glass-transition);
    pointer-events: auto;
    border-radius: 1rem;
    padding: 1.5rem;
    border: none !important;
    overflow: hidden;
  }

  .glass-panel {
    position: relative;
    background: var(--glass-neutral);
    backdrop-filter: blur(var(--glass-blur-radius)) 
                     brightness(var(--glass-brightness)) 
                     saturate(var(--glass-saturation)) 
                     contrast(var(--glass-contrast));
    -webkit-backdrop-filter: blur(var(--glass-blur-radius)) 
                             brightness(var(--glass-brightness)) 
                             saturate(var(--glass-saturation)) 
                             contrast(var(--glass-contrast));
    border: 1px solid var(--glass-border);
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.3),
      0 4px 16px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 var(--glass-highlight),
      inset 0 -1px 0 rgba(255, 255, 255, 0.05);
    transition: var(--glass-transition);
    pointer-events: auto;
    border-radius: 1rem;
    padding: 1.5rem;
    border: none !important;
  }

  /* ðŸŽ¨ Enhanced Buttons */
  .btn-primary {
    background: linear-gradient(135deg, 
      rgba(99, 102, 241, 0.9) 0%, 
      rgba(168, 85, 247, 0.9) 100%);
