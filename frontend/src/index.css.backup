}

/* Portrait Tablet */
@media (min-width: 768px) and (max-width: 1024px) and (orientation: portrait) {
  .tablet-portrait-grid { @apply grid-cols-2; }
  .tablet-portrait-spacing { @apply space-y-5; }
}

/* Landscape Tablet */
@media (min-width: 768px) and (max-width: 1024px) and (orientation: landscape) {
  .tablet-landscape-grid { @apply grid-cols-3; }
  .tablet-landscape-compact { @apply py-2 px-3; }
  
  header { @apply h-14; }
  header .flex { @apply h-14; }
  header nav a { @apply px-3 py-2 text-sm; }
  header button { @apply px-3 py-2 text-sm; }
}

/* Mobile Landscape */
@media (orientation: landscape) and (max-height: 500px) {
  .landscape-compact { @apply py-2 text-sm; }
  .landscape-header { @apply h-12; }
  
  :root {
    --glass-blur-radius: 16px;
    --glass-thickness: 4px;
  }
}

/* High DPI Displays */
@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
  .high-dpi-border { border-width: 0.5px; }
  .high-dpi-shadow { 
    box-shadow: 
      0 4px 16px rgba(0, 0, 0, 0.3),
      0 2px 8px rgba(0, 0, 0, 0.2);
  }
}

/* Reduced Motion Support */
@media (prefers-reduced-motion: reduce) {
  .glass-ultra,
  .card-ultra,
  .btn-primary,
  .btn-secondary,
  .btn-danger,
  .btn-glass-morphic,
  .liquid-glass {
    transition: none;
    animation: none;
  }
  
  .animate-glass-float,
  .animate-glass-pulse,
  .gradient-shift,
  .gradient-flow {
    animation: none;
  }
}

/* Touch Device Optimizations */
@media (hover: none) and (pointer: coarse) {
  .glass-ultra:hover { transform: none; }
  .card-ultra:hover { transform: none; }
  .btn-primary:hover { transform: none; }
  .btn-secondary:hover { transform: none; }
  .btn-danger:hover { transform: none; }
  .btn-glass-morphic:hover { transform: none; }
  .liquid-glass:hover { transform: none; }
  
  .touch-optimized {
    min-height: 44px;
    min-width: 44px;
    padding: 12px 16px;
  }
}

/* ðŸŒŸ RAINBOWKIT GLASSMORPHISM INTEGRATION */

/* Feature Query Support for Older Browsers */
@supports not (backdrop-filter: blur(1px)) and not (-webkit-backdrop-filter: blur(1px)) {
  .glass-ultra,
  .glass-panel-ultra,
  .card-ultra,
  .liquid-glass {
    background: rgba(255, 255, 255, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }
  
  .dark .glass-ultra,
  .dark .glass-panel-ultra,
  .dark .card-ultra,
  .dark .liquid-glass {
    background: rgba(15, 23, 42, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
}

/* Enhanced RainbowKit Styling */
[data-rk] {
  font-family: var(--font-sans);
}

[data-rk] div[role="dialog"] {
  @apply liquid-glass;
  background: rgba(15, 23, 42, 0.95) !important;
  backdrop-filter: blur(32px) brightness(110%) saturate(130%) !important;
  -webkit-backdrop-filter: blur(32px) brightness(110%) saturate(130%) !important;
  border: 1px solid rgba(255, 255, 255, 0.15) !important;
  border-radius: 24px !important;
  box-shadow: 
    0 24px 64px rgba(0, 0, 0, 0.5),
    0 12px 32px rgba(0, 0, 0, 0.3),
    inset 0 2px 0 rgba(255, 255, 255, 0.2) !important;
  animation: modalSlideIn 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  max-width: 420px !important;
  width: 90vw !important;
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: scale(0.9) translateY(20px);
    backdrop-filter: blur(0px);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
    backdrop-filter: blur(32px) brightness(110%) saturate(130%);
  }
}

[data-rk] div[role="dialog"] + div {
  background: rgba(0, 0, 0, 0.7) !important;
  backdrop-filter: blur(8px) !important;
  -webkit-backdrop-filter: blur(8px) !important;
}

[data-rk] div[role="dialog"] button[data-testid*="wallet"] {
  @apply liquid-glass;
  background: rgba(255, 255, 255, 0.08) !important;
  backdrop-filter: blur(20px) brightness(108%) saturate(125%) !important;
  -webkit-backdrop-filter: blur(20px) brightness(108%) saturate(125%) !important;
  border: 1px solid rgba(255, 255, 255, 0.15) !important;
  border-radius: 16px !important;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
  padding: 16px !important;
  margin: 4px 0 !important;
}

[data-rk] div[role="dialog"] button[data-testid*="wallet"]:hover {
  background: rgba(255, 255, 255, 0.15) !important;
  backdrop-filter: blur(24px) brightness(115%) saturate(135%) !important;
  -webkit-backdrop-filter: blur(24px) brightness(115%) saturate(135%) !important;
  transform: translateY(-2px) scale(1.02) !important;
  box-shadow: 
    0 12px 32px rgba(0, 0, 0, 0.4),
    0 6px 16px rgba(0, 0, 0, 0.3) !important;
}

[data-rk] div[role="dialog"] h1,
[data-rk] div[role="dialog"] h2,
[data-rk] div[role="dialog"] h3 {
  color: white !important;
  text-shadow: 0 2px 8px rgba(0, 0, 0, 0.7) !important;
  font-weight: 600 !important;
  letter-spacing: -0.025em !important;
}

[data-rk] div[role="dialog"] p,
[data-rk] div[role="dialog"] span {
  color: rgba(255, 255, 255, 0.9) !important;
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.5) !important;
}

/* Enhanced Loading States */
.loading-spinner {
  @apply animate-spin rounded-full border-2;
  border-color: rgba(99, 102, 241, 0.3);
  border-top-color: rgb(99, 102, 241);
  backdrop-filter: blur(8px);
}

.pulse-glow {
  animation: pulse-glow 2s ease-in-out infinite;
}

@keyframes pulse-glow {
  0%, 100% {
    box-shadow: 0 0 20px rgba(99, 102, 241, 0.5);
  }
  50% {
    box-shadow: 0 0 40px rgba(99, 102, 241, 0.8);
  }
}

/* Enhanced Text Contrast */
.text-slate-100, 
.text-gray-100,
.text-white {
  color: white !important;
  text-shadow: 0 1px 4px rgba(0, 0, 0, 0.5) !important;
}

.text-gray-300 {
  color: rgba(255, 255, 255, 0.9) !important;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.4) !important;
}

.text-gray-400 {
  color: rgba(255, 255, 255, 0.8) !important;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3) !important;
}

/* Remove Borders from All Glass Elements */
.border,
.border-white\/10,
.border-white\/20,
.border-gray-200,
.border-gray-300 {
  border: none !important;
}
