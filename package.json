{
  "name": "unit-manager-dao",
  "version": "1.0.0",
  "description": "DAO system for managing participants with hierarchical roles",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network sepolia",
    "lint:sol": "solhint contracts/**/*.sol",
    "lint:ts": "eslint test/**/*.ts scripts/**/*.ts",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.0",
    "hardhat": "^2.23.0",
    "solhint": "^5.0.5",
    "@typechain/hardhat": "^9.1.0",
    "prettier": "^3.3.0",
    "prettier-plugin-solidity": "^1.3.1",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0"
  },
  "dependencies": {
    "@openzeppelin/contracts-upgradeable": "^5.3.0"
  },
  "keywords": ["dao", "governance", "smart-contracts", "ethereum", "hardhat"],
  "author": "Unit Manager DAO Team",
  "license": "MIT"
}
